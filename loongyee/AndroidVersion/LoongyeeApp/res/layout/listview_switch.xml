<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/subswitchtitle"
                >
            <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/back"
                    android:textSize="14sp"
                    android:background="@drawable/back"
                    android:textColor="#ffffff" android:textStyle="bold"
                    android:paddingBottom="3dp"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true" android:layout_marginTop="31dp" android:onClick="onClick"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF" android:password="false" android:text=""/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/save"
                    android:textSize="14sp"
                    android:background="@drawable/edit"
                    android:textColor="#ffffff" android:textStyle="bold"
                    android:paddingBottom="3dp"
                    android:layout_alignParentRight="true" android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true" android:layout_marginTop="31dp" android:onClick="onClick"
                    android:id="@+id/button_save"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#f4f4f4">
            <com.teamsourcing.LoongyeeApp.main.ListViewDragNDrop

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView_switch"/>
    </LinearLayout>

</LinearLayout>