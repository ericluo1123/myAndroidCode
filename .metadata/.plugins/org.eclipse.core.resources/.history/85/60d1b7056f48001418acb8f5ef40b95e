	private String getNumber(String string) {
		// TODO Auto-generated method stub
		String result = editText.getText().toString();

		if (first == false) {
			first = true;
			if (string.equals(".")) {
				if (dot == false) {
					dot = true;
					result = string;
				}
			} else {
				result = string;
			}

		} else {
			if (string.equals(".")) {
				if (dot == false) {
					dot = true;
					result += string;
				}
			} else {
				result += string;
			}
		}
		editText.setText(result);
		return result;
	}

	public void getResult() {
		String text = new String(Double.toString(myCalculator.getResult()));
		editText.setText(text);
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
